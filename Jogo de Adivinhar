//Este programa em linguagem C implementa um simples jogo de adivinhação de número. Ao ser executado, ele gera aleatoriamente um número inteiro entre 1 e 100. 

#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main (){
	int n, aleatorio;
	
	srand(time(NULL));
	aleatorio = rand() %100+1;
	
	do{
		printf ("Digite um numero inteiro entre 1 e 100: ");
		scanf ("%d", &n);
		
        if (n < aleatorio) {
            printf("O nemero e maior que %d\n\n", n);
            
        } else if (n > aleatorio) {
            printf("O numero e menor que %d\n\n", n);
            
        } else {
            printf("\nParabens! Voce acertou. O número era: %d\n", aleatorio);
        }
		
	} while(n!=aleatorio);
	
return 0;
}
